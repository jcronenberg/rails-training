<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<% flash.each do |type, msg| %>
	  <div>
	    <%= msg %>
	  </div>
	<% end %>
	<p><%= link_to 'Home', root_path %> | <%= link_to 'Log in', users_login_path %> | <%= link_to 'Register user', users_new_path %></p>
	<% if current_user %>
	  Logged in as: <%= current_user.username %>
	  <%= link_to 'log out', users_logout_path, method: :post %>
	<% else %>
	  Not logged in
	<% end %>
    <%= yield %>
  </body>
</html>
