<h1>Create new thread</h1>
<%= form_for @thread, url: board_threads_new_path(board_id: params[:board_id]), method: :post do |f| %>
	<% unless current_user %>
		<%= f.text_field :username, placeholder: "Username" %><br/><br/>
	<% end %>
	<%= f.text_field :title, placeholder: "Title" %><br/><br/>
	<%= f.text_area :content, placeholder: "Content" %><br/>

	<%= f.submit 'Create thread' %>
<% end %>
